<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">
    <Dialog>
            <customHeader>
			<Toolbar>
				<!-- <Button type="Back" press="onPress" />-->
			<ToolbarSpacer/>
				<!-- <Title text="Title" level="H2"/> -->
				<ToolbarSpacer/>
				<Button icon="sap-icon://decline" type="Reject" press="onCloseEdit" ariaLabelledBy="editButtonLabel"/>
			</Toolbar>
            </customHeader>
        <content>
            <l:Grid defaultSpan = "L12 M12 S12" width = "auto">
                <l:content>
                    <f:Form editable="true">
                        <f:layout>
                            <f:ResponsiveGridLayout
                                labelSpanXL="3"
                                labelSpanL="3"
                                labelSpanM="3"
                                labelSpanS="12"
                                adjustLabelSpan="false"
                                emptySpanXL="3"
                                emptySpanL="3"
                                emptySpanM="3"
                                emptySpanS="0"
                                columnsXL="1"
                                columnsL="1"
                                columnsM="1"
                                singleContainerFullSize="false" />
                        </f:layout>
                        <f:formContainers>
                            <f:FormContainer>
                                <f:formElements>
                                
                                    <f:FormElement label="Item Code">
                                        <Input id="eidsCodeID"/>
                                    </f:FormElement>

                                    <f:FormElement label="Item Name">
                                        <Input id="idisCodeName"/>
                                    </f:FormElement>

                                    <f:FormElement label="UoM Code">
                                        <Input id="idisUoM"/>       
                                    </f:FormElement>

                                    <f:FormElement label="Quantity">
                                       <Input id="idisQty" liveChange="onEnableBttn" type="Number"/>
                                    </f:FormElement>
                                    
                                </f:formElements>
                            </f:FormContainer>
                        </f:formContainers>
                    </f:Form>
                </l:content>
            </l:Grid>
        </content>
        <beginButton>
            <Button text="Delete" icon="sap-icon://delete" press="onDeleteItem" type="Reject"/>
        </beginButton>
    
        <endButton>
            <Button id="bttnSave" text="Save" icon="sap-icon://save" press="onSaveEdit" type="Accept" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>