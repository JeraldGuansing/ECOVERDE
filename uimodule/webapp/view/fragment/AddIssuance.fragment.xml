<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">
    <Dialog>
            <customHeader>
			<Toolbar>
				<!-- <Button type="Back" press="onPress" />-->
			<ToolbarSpacer/>
				<!-- <Title text="Title" level="H2"/> -->
				<ToolbarSpacer/>
				<Button icon="sap-icon://decline" type="Reject" press="onCloseIssuance" ariaLabelledBy="editButtonLabel"/>
			</Toolbar>
            </customHeader>
        <content>
            <l:Grid defaultSpan = "L12 M12 S12" width = "auto">
                <l:content>
                    <f:Form editable="true">
                        <f:layout>
                            <f:ResponsiveGridLayout
                                labelSpanXL="3"
                                labelSpanL="3"
                                labelSpanM="3"
                                labelSpanS="12"
                                adjustLabelSpan="false"
                                emptySpanXL="3"
                                emptySpanL="3"
                                emptySpanM="3"
                                emptySpanS="0"
                                columnsXL="1"
                                columnsL="1"
                                columnsM="1"
                                singleContainerFullSize="false" />
                        </f:layout>
                        <f:formContainers>
                            <f:FormContainer>
                                <f:formElements>

                                    <f:FormElement label="Item Code">
                                    <ComboBox id="isItemCode" placeholder="Select Item Code" change="onvalidationCode" items="{oModel>/itemMaster}">
                                            <core:Item key="{oModel>ItemName}" text="{oModel>ItemCode}" />
                                        </ComboBox>
                                    </f:FormElement>

                                    <f:FormElement label="Item Name">
                                       <ComboBox id="isItemName" placeholder="Select Item Name" change="onvalidationDesk" items="{oModel>/itemMaster}">
                                            <core:Item key="{oModel>ItemCode}" text="{oModel>ItemName}" />
                                        </ComboBox>
                                    </f:FormElement>

                                    <f:FormElement label="UoM Code">
                                        <ComboBox id="isUOM" placeholder="Select Item UOM" change="onvalidationUOM" items="{oModel>/UoMCode}">
                                            <core:Item key="{oModel>AbsEntry}" text="{oModel>Code}" />
                                        </ComboBox>
                                    </f:FormElement>

                                    <f:FormElement label="Quantity">
                                       <Input id="isQtyID" placeholder="Input Quantity" type="Number"/>
                                            
                                    </f:FormElement>
                                    
                                </f:formElements>
                            </f:FormContainer>
                        </f:formContainers>
                    </f:Form>
                </l:content>
            </l:Grid>
        </content>
        <beginButton>
            <Button text="Cancel" icon="sap-icon://inspect-down" press="onCloseIssuance" type="Reject"/>
        </beginButton>
    
        <endButton>
            <Button text="Add" icon="sap-icon://add" press="onSaveItem" type="Accept" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>