<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">
    <Dialog>
        <content>
            <l:Grid defaultSpan = "L12 M12 S12" width = "auto">
                <l:content>
                    <f:Form editable="true">
                        <f:layout>
                            <f:ResponsiveGridLayout
                                labelSpanXL="3"
                                labelSpanL="3"
                                labelSpanM="3"
                                labelSpanS="12"
                                adjustLabelSpan="false"
                                emptySpanXL="3"
                                emptySpanL="3"
                                emptySpanM="3"
                                emptySpanS="0"
                                columnsXL="1"
                                columnsL="1"
                                columnsM="1"
                                singleContainerFullSize="false" />
                        </f:layout>
                        <f:formContainers>
                            <f:FormContainer>
                                <f:formElements>
                                
                                    <f:FormElement label="Item Code">
                                        <ComboBox id="itmIDCount" selectionChange="onSelectItemCode"  placeholder="Select Item Code" items="{oModel>/itemMaster}">
                                            <core:Item key="{oModel>ItemName}" text="{oModel>ItemCode}" />
                                        </ComboBox>
                                    </f:FormElement>

                                    <f:FormElement label="Item Name">
                                        <ComboBox id="itmNameCount" selectionChange="onSelectItemName" placeholder="Select Description" items="{oModel>/itemMaster}">
                                            <core:Item key="{oModel>ItemCode}" text="{oModel>ItemName}" />
                                        </ComboBox>
                                    </f:FormElement>

                                       <f:FormElement label="UoM Code">
                                        <ComboBox id="uomIDCount" selectionChange="onGetBarcodeOnAdd" placeholder="Select UoMCode" items="{oModel>/UoMCode}">
                                            <core:Item key="{oModel>AbsEntry}" text="{oModel>Code}" />
                                        </ComboBox>
                                    </f:FormElement>

                                    <f:FormElement label="Quantity">
                                       <Input id="qtyIDCount" placeholder="Input Quantity" type="Number"/>
                                    </f:FormElement>
                                    
                                </f:formElements>
                            </f:FormContainer>
                        </f:formContainers>
                    </f:Form>
                </l:content>
            </l:Grid>
        </content>
        <beginButton>
            <Button text="Cancel" icon="sap-icon://sys-cancel" press="onCloseAdd" type="Reject"/>
        </beginButton>
        <endButton>
            <Button text="Add" icon="sap-icon://add" press="onGetAddItem" type="Accept" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>