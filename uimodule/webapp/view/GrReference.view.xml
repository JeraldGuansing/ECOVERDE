 <mvc:View controllerName="com.ecoverde.ECOVERDE.controller.GrReference"
  displayBlock="true"
  xmlns="sap.m"
	xmlns:f="sap.ui.layout.form" 
	xmlns:core="sap.ui.core" 
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
  xmlns:t="sap.ui.table"
	xmlns:html="http://www.w3.org/1999/xhtml"
  xmlns:tnt="sap.tnt">
  <App id="GrReference" >
      <Page title="Good Receipt PO" showNavButton="true" navButtonPress="onWithRef">
            <content>
              <List>
                
            <InputListItem label="Doc Num">
                    <Label id="docID" />
            </InputListItem>

            <InputListItem label="Vendor Code">
                  <Label id="venID" />
            </InputListItem>
            
            <InputListItem label="Vendor Name">
                    <Label id="venName" />
            </InputListItem>
      
            <InputListItem label="Posting Date">
                  <DatePicker
                  id="DP8"
                  displayFormat="YYYY-MM-dd"
                  valueFormat="yyyyMMdd"
                  change=""
                  class="sapUiSmallMarginBottom"/>
            </InputListItem>
          
        </List>
      <html:br></html:br>
                <List>
                  <InputListItem id="inptID" label="Receiving Option:">
                    <Switch id="swID" state="false" customTextOn="Scan" customTextOff="Manual"/>
                  </InputListItem>
                </List>
                <List id="projectlistid" items="{oModel>/DocumentLines}">
                    <ObjectListItem title="{oModel>ItemCode}"
                            number="{oModel>receivedQty}/{oModel>openQuant}"
                            numberUnit="{oModel>GrossTotal} {oModel>Currency} {oModel>TaxCode}"
                            type="Active"
                            press = "onPressItem"
                            icon="sap-icon://add-product"
                            intro="{oModel>ItemDescription}">
                            <firstStatus>
				                      <ObjectStatus text=" {oModel>UoMCode}"/>
                            </firstStatus>
                    </ObjectListItem>
                </List>
        </content>
        <footer>
            <Bar>
             <contentLeft>
				      	<Button text="Add" press="onAddItemThree" icon="sap-icon://add"/>
			      	</contentLeft>
              <contentMiddle>
				      	<Button text="Scan" press="onScan" icon="sap-icon://camera"/>
			      	</contentMiddle>
              <contentRight>
				      	<Button text="Post" press="onConfirmPosting" icon="sap-icon://manager-insight"/>
			      	</contentRight>
            </Bar>
        </footer>
      </Page>
  </App>
</mvc:View>