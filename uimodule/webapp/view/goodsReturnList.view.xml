 <mvc:View controllerName="com.ecoverde.ECOVERDE.controller.goodsReturnList"
  displayBlock="true"
  xmlns="sap.m"
	xmlns:f="sap.ui.layout.form" 
	xmlns:core="sap.ui.core" 
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
  xmlns:t="sap.ui.table"
   xmlns:tnt="sap.tnt"
	xmlns:html="http://www.w3.org/1999/xhtml">
  <App id="goodsReturnList" >
    <Page showHeader="true" title="Goods Return" showNavButton="true" navButtonPress="onPressIssuance">    
       <content>
          <List>
            <InputListItem label="Vendor Code">
                  <Label id="venID" />
            </InputListItem>
            <InputListItem label="Vendor Name">
                    <Label id="venName" />
            </InputListItem>
          
        </List>
        <html:br></html:br>
            <t:Table id="tblID" rows="{oModel>/goodsRetlist}" cellClick="" selectionMode="Single" ariaLabelledBy="title">
                <t:columns>
                    <t:Column width="5em">
                      <Label text="Doc Num" />
                      <t:template>
                        <Text text="{oModel>DocNum}" wrapping="false" />
                      </t:template>
                    </t:Column>

                     <t:Column width="6rem">
                      <Label text="Posting Date" />
                      <t:template>
                        <Text text="{oModel>DocDate}" wrapping="false" />
                      </t:template>
                    </t:Column>

                    <t:Column width="6rem">
                      <Label text="Amount" />
                      <t:template>
                        <Text text="{oModel>UnitPrice}" wrapping="false" />
                      </t:template>
                    </t:Column>

                    <t:Column width="6rem">
                      <Label text="Document Date" />
                      <t:template>
                        <Text text="{oModel>TaxDate}" wrapping="false" />
                      </t:template>
                    </t:Column>

                    <t:Column width="6rem">
                      <Label text="DocEntry" />
                      <t:template>
                        <Text text="{oModel>DocEntry}" wrapping="false" />
                      </t:template>
                    </t:Column>

                </t:columns>
            </t:Table>
        </content>
          <footer>
            <Bar>
            <contentLeft>
                <Button text="Refresh" press="initialize" icon="sap-icon://synchronize" />
              </contentLeft>

              <contentRight>
                <Button text="Copy" press="getContextByIndex" icon="sap-icon://copy" />
              </contentRight>
            </Bar>
          </footer>

      </Page>
  </App>
</mvc:View>