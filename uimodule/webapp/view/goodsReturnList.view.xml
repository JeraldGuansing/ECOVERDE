 <mvc:View controllerName="com.ecoverde.ECOVERDE.controller.goodsReturnList"
  displayBlock="true"
  xmlns="sap.m"
	xmlns:f="sap.ui.layout.form" 
	xmlns:core="sap.ui.core" 
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
  xmlns:t="sap.ui.table"
   xmlns:tnt="sap.tnt"
	xmlns:html="http://www.w3.org/1999/xhtml">
  <App id="goodsReturnList" >
    <Page showHeader="True" showNavButton="true" navButtonPress="onPressIssuance">
        <VBox>
      	  <FlexBox
            height="100px"
				    alignItems="Start"
				    justifyContent="Center">
					  <Image src="./resources/img/ecoverde.png"/>
          </FlexBox>
         </VBox>
      
       <content>

          <Toolbar>
          <Label text="Vendor:"/>
            <ComboBox id="rtVendor" width="84%" placeholder="Select Vendor" selectionChange="onSelectVendor" items="{oModel>/VendorList}">
                <core:Item key="{oModel>CarCOde}" text="{oModel>CardName}"/>
            </ComboBox>
          </Toolbar>
            <t:Table id="tblID" rows="{oModel>/goodsRetlist}" cellClick="" selectionMode="Single" ariaLabelledBy="title">
                <t:columns>
                    <t:Column width="5em">
                      <Label text="Doc Num" />
                      <t:template>
                        <Text text="{oModel>DocNum}" wrapping="false" />
                      </t:template>
                    </t:Column>

                    <t:Column width="7rem">
                      <Label text="Vendor Code" />
                      <t:template>
                        <Text text="{oModel>CardCode}" wrapping="false" />
                      </t:template>
                    </t:Column>

                    <t:Column width="6rem">
                      <Label text="Amount" />
                      <t:template>
                        <Text text="{oModel>UnitPrice}" wrapping="false" />
                      </t:template>
                    </t:Column>

                    <t:Column width="6rem">
                      <Label text="Posting Date" />
                      <t:template>
                        <Text text="{oModel>DocDate}" wrapping="false" />
                      </t:template>
                    </t:Column>

                    <t:Column width="6rem">
                      <Label text="Document Date" />
                      <t:template>
                        <Text text="{oModel>TaxDate}" wrapping="false" />
                      </t:template>
                    </t:Column>
                </t:columns>
            </t:Table>
        </content>
          <footer>
            <Bar>
            <contentLeft>
                <Button text="Refresh" press="initialize" icon="sap-icon://synchronize" />
              </contentLeft>
              <contentLeft>
                <Button text="Add" press="onPressAddReturn" icon="sap-icon://add" />
              </contentLeft> 

              <contentRight>
                <Button text="Copy" press="onPressCopyReturn" icon="sap-icon://copy" />
              </contentRight>
            </Bar>
          </footer>

      </Page>
  </App>
</mvc:View>