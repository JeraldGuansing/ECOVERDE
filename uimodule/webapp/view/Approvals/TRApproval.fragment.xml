<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">
    <Dialog>
            <customHeader>
			<Toolbar>
				<!-- <Button type="Back" press="onPress" />-->
			<ToolbarSpacer/>
				<!-- <Title text="Title" level="H2"/> -->
				<ToolbarSpacer/>
				<Button icon="sap-icon://decline" type="Reject" press="onCloseApproval" ariaLabelledBy="editButtonLabel"/>
			</Toolbar>
            </customHeader>
        <content>
            <l:Grid defaultSpan = "L12 M12 S12" width = "auto">
                <l:content>
                    <f:Form editable="true">
                        <f:layout>
                            <f:ResponsiveGridLayout
                                labelSpanXL="3"
                                labelSpanL="3"
                                labelSpanM="3"
                                labelSpanS="12"
                                adjustLabelSpan="false"
                                emptySpanXL="3"
                                emptySpanL="3"
                                emptySpanM="3"
                                emptySpanS="0"
                                columnsXL="1"
                                columnsL="1"
                                columnsM="1"
                                singleContainerFullSize="false" />
                        </f:layout>
                        <f:formContainers>
                            <f:FormContainer>
                                <f:formElements>
                                    <f:FormElement label="Remarks">
                                            <Input id="TRremarksID"/>
                                    </f:FormElement>                              
                                </f:formElements>
                            </f:FormContainer>
                        </f:formContainers>
                    </f:Form>
                </l:content>
            </l:Grid>
        </content>
        <beginButton>
            <Button text="Cancel" icon="sap-icon://inspect-down" press="onCloseApproval" type="Reject"/>
        </beginButton>
    
        <endButton>
            <Button text="Post" icon="sap-icon://manager-insight" press="onConfirmPosting" type="Accept" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>