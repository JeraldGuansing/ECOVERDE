  <App id="GRScan">
      <Page showHeader="false">
         <VBox>
            <FlexBox
                height="100px"
                alignItems="Start"
                justifyContent="Center">
                <Image src="./resources/img/ecoverde.png"/>
              </FlexBox>
            </VBox>
             <Input id="myBarcode"/>
              <Button text="Scan" press="onTest"></Button>
      
