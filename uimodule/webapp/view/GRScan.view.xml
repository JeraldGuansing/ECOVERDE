 <mvc:View controllerName="com.ecoverde.ECOVERDE.controller.GRScan"
  displayBlock="true"
  xmlns="sap.m"
	xmlns:f="sap.ui.layout.form" 
	xmlns:core="sap.ui.core" 
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
  xmlns:t="sap.ui.table"
	xmlns:html="http://www.w3.org/1999/xhtml">
  <App id="GRScan">
      <Page showHeader="true" title="Goods Receipt">
              <!-- <VBox>
                <FlexBox
                  height="80px"
                  alignItems="Start"
                  justifyContent="Center">
                    <Image src="./resources/img/ecoverde.png"/>
                </FlexBox>
              </VBox> -->
             <!-- <Input id="myBarcode"/>
              <Button text="Scan" press="ontest"></Button> -->
      <List>        
        <InputListItem label="Vendor Code">
          	  <Label id="Vcode" />
        </InputListItem>
        
        <InputListItem label="Vendor Name">
                <Label id="Vname" />
        </InputListItem>
  
        <InputListItem label="Posting Date">
             	<DatePicker
              id="DP8"
              displayFormat="MM/dd/YYYY"
              change=""
              class="sapUiSmallMarginBottom"/>
        </InputListItem>
      
     </List>
      <html:br></html:br>


             <content>
                <List items="{oModel>/value}">
                  <items>
                    <ObjectListItem id="list" title="{oModel>ItemCode}"
                            number="{oModel>Quantity}"
                            type="Active"
                            press = "onShowEdit"
                            icon="sap-icon://product"
                            intro="{oModel>ItemName}">
                      
                                <firstStatus>
                                  <ObjectStatus text="{oModel>UoMCode}"/>
                                </firstStatus>
                                <attributes>
                                  <ObjectAttribute title="{oModel>BarCode}"/>
                                </attributes>
                          </ObjectListItem>
                  </items>
                </List>
            </content>
    <footer>
			<Bar>
				<contentLeft>
					<Button text="Add" press="onAddItem" icon="sap-icon://add"/>
				</contentLeft>
        <contentMiddle>
					<Button text="Scan" press="onScan" icon="sap-icon://camera"/>
				</contentMiddle>
        <contentRight>
					<Button text="Post" press="onPostingGR" icon="sap-icon://manager-insight"/>
				</contentRight>
			</Bar>
		</footer>

  </Page>
</App>
</mvc:View>