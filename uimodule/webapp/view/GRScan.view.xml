          <content>
                <List items="{oModel>/value}" headerText="Scanned Item">
                  <items>
                    <ObjectListItem id="list" title="{oModel>ItemCode}"
                            number="{oModel>Quantity}"
                            type="Active"
                            press = "onViewItem">
                      <attributes>
                          <ObjectAttribute id="deskID" title="{oModel>ItemName}"/>
                      </attributes>
                    </ObjectListItem>
                  </items>
                  
                </List>
            </content>

    <footer>
			<Bar>
				<contentRight>
					<Button text="Add" press="onTest" icon="sap-icon://add"/>
				</contentRight>
        <contentRight>
					<Button text="Post" press="onSetting" icon="sap-icon://manager-insight"/>
				</contentRight>
			</Bar>
		</footer>

